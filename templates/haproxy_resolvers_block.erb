resolvers <%= @name %>
  <%- Array(@nameservers).each do |nameserver_details| -%>
  nameserver <%= nameserver_details %>
  <%- end -%>
  <%- if @resolve_retries -%>
  resolve_retries <%= @resolve_retries %>
  <%- end -%>
  <%- Array(@timeouts).each do |timeout_details| -%>
  timeout <%= timeout_details %>
  <%- end -%>
  <%- Array(@holds).each do |hold_details| -%>
  hold <%= hold_details %>
  <%- end -%>
